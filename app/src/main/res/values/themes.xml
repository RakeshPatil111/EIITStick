<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StickerPocket" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Body2</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Overline</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Subtitle2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Headline6</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>

    </style>

    <style name="Theme.StickerPocket" parent="Base.Theme.StickerPocket" />

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@color/bottom_nav_item_selector</item>
        <item name="itemIconTint">@color/bottom_nav_item_selector</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationView.TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationView.TextAppearance</item>
    </style>

    <style name="MyBottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/geologic_medium</item>
    </style>

    <!--Style for TextInputLayout-->
    <style name="Widget.App.TextInputLayout.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_12dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_12dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/color_secondary</item>
        <item name="endIconTint">@color/teal_200</item>
        <item name="startIconTint">@color/color_secondary_variant</item>
        <item name="strokeColor">@color/color_border</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_1dp</item>
        <item name="boxStrokeWidth">@dimen/dimen_1dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/color_border</item>
        <item name="colorOnSurface">@color/color_border</item>
        <item name="colorSurface">@color/teal_200</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputEditText.FilledBox" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/teal_200</item>
        <item name="hintTextColor">@color/teal_200</item>
        <item name="android:textColorHint">@color/teal_200</item>
    </style>

    <!--option title Style-->
    <style name="Widget.AppCompat.TextView.Options" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_primary</item>
        <item name="fontFamily">@font/geologic_regular</item>
        <item name="android:fontFamily">@font/geologic_regular</item>
        <item name="android:textSize">@dimen/text_dimen_18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dimen_12dp</item>
    </style>

    <!--header title Style-->
    <style name="Widget.AppCompat.TextView.Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_primary</item>
        <item name="fontFamily">@font/geologic_medium</item>
        <item name="android:fontFamily">@font/geologic_medium</item>
        <item name="android:textSize">@dimen/text_dimen_30sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--setting option title Style-->
    <style name="Widget.AppCompat.TextView.Setting.Options" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/color_primary</item>
        <item name="fontFamily">@font/geologic_regular</item>
        <item name="android:fontFamily">@font/geologic_regular</item>
        <item name="android:textSize">@dimen/text_dimen_20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Style for TextInputLayout-->
    <style name="Widget.App.TextInputLayout.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="strokeColor">@color/color_border</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_1dp</item>
        <item name="boxStrokeWidth">@dimen/dimen_1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
    </style>

    <!--Style for TextInputLayout-->
    <style name="Widget.App.TextInputLayout.Light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="strokeColor">@color/color_border</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_1dp</item>
        <item name="boxStrokeWidth">@dimen/dimen_1dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout.Light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.Light" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/color_primary</item>
        <item name="colorSurface">@color/teal_700</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputEditText.FilledBox.Light" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/color_text_hint</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
    </style>
</resources>